extends ../layout/layout

block head-title
  title Update - #{appName}

block content

  script.
    $(function() {
      cwriting.initUpdate(!{JSON.stringify(writing)});
    });

  .section.page-title
    h1 Update

  .section
    form.main.text
      .sub-section
        .form-group
          textarea.form-control.input-lg(name='title', rows=3, placeholder='Title', maxlength=128) #{writing.title}
        .form-group
          textarea.form-control.input-lg(name='text', rows=21, placeholder='Content') #{writing.text}
        .form-group
          label.control-label Align Center
          input(name='center', type='checkbox', checked=writing.align == 'center')
      .sub-section
        button.btn.btn-primary(name='send', data-loading-text='Sending') Update
