extends ../layout/layout

block head-title
  title Upload - #{appName}

block content

  .section.page-title
    h1 Upload

  if !ticketCount
    .section
      | !{ticketMax} writings a day.
      br
      | You can upload #{hours} hours later.

  else
    script.
      $(function() {
        cwriting.initNew();
      });

    .section
      form.main
        .sub-section
          .form-group
            label.control-label Image
            input.form-control(type='file', name='files', accept='writing/*', multiple='multiple')
            p.help-block
              | You can upload #{ticketCount} more writings today.
              br
              if appNamel == 'drypot'
                | Only SVG files.
          .form-group
            label.control-label Comment
            textarea.form-control(name='text', rows=7)
        .sub-section
          button.btn.btn-primary(name='send', data-loading-text='Sending') Upload
